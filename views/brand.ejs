<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>xxx项目管理后台</title>
    <link rel="stylesheet" href="/bli/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/brand.css">
    <!-- <link rel="stylesheet" href="/font/iconfont.css"> -->

</head>

<body>
    <!-- container的样式可以写在公共样式 common -->
    <div class="container">
        <!-- 头部 -->
        <%- include('./common/head.ejs') %>


        <!-- 中部 -->
        <div class="lyj-main">
            <%- include('./common/menu.ejs') %>
            <div class="right-main rightMainBox">
                <div class="btnBrandBox">
                    <input type="button" class="btnBrand" id="btnBrand" value="新增品牌">
                </div>
                <div class="mainTable">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>品牌LOGO</th>
                                <th>品牌名称</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%  for(var i=0;i < list.length;i++){%>
                            <tr>
                                <th scope="row">
                                    <%= i+1 %>
                                </th>
                                <!-- iconfont的图标文件写在 reset公共文件 -->
                                <!-- <td><i class="iconfont">&#xe678;</i></td> -->
                                <td><img src="/<%= list[i].drandLogo %>" alt="" style="width:50px;"></td>
                                <td id="name">
                                    <!-- 数据库的 drandname -->
                                    <%= list[i].drandname %>
                                </td>
                                <td>
                                    <span id="spanBrandXiu" abcd="<%=list[i].drandname %>" class="<%= list[i]._id%>"
                                        style="cursor:pointer">
                                        修改</span>
                                    <span><a href="/users/deletebrand?id=<%= list[i]._id %>" style="color: red;">删除</a></span>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- 分页 -->
                <nav aria-label="..." class="nav-fenYe">
                    <ul class="pagination pagination-sm ul1">
                        <li>
                            <a href="/users/brand?page=<%= currentPage - 1 < 1 ? 1: currentPage - 1 %>&pageSize=<%= pageSize %>"
                                aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <% for (var i = 0; i < totalPage ; i++) {%>
                        <li class="<%= currentPage === (i+1) ? 'active': '' %>">
                            <a href="/users/brand?page=<%= i+1 %>&pageSize=<%= pageSize %>">
                                <%= i + 1%></a>
                        </li>

                        <%}%>
                        <li>
                            <a href="/users/brand?page=<%= currentPage + 1 > totalPage ? totalPage: currentPage + 1 %>&pageSize=<%= pageSize %>"
                                aria-label="Next" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>




                <!-- 新增品牌 -->
                <div class="newBrandBox" id="newBrandBox">
                    <div class="newH2box">
                        <h2>新增品牌</h2>
                    </div>
                    <div class="newInputBox">
                        <form action="/users/addBrand" method="POST" enctype="multipart/form-data">

                            <p>
                                <label>
                                    <span>名称:</span>
                                    <input type="text" placeholder="请输入手机名称" name="drandname">
                                </label>
                            </p>
                            <p>
                                <span>图片:</span>
                                <input type="file" class="file" name="drandLogo">
                            </p>
                            <p style="text-align:center;">
                                <input type="submit" value="确认" class="btnBox" name="btnName1">
                                <input type="button" value="取消" class="btnBox" name="btnName2" id="btnBox2">
                            </p>
                        </form>
                    </div>

                </div>

                <!-- 品牌信息修改 -->
                <div class="xiuBrandBox" id="xiuBrandBox">
                    <div class="newH2box">
                        <h2>品牌信息修改</h2>
                    </div>
                    <div class="newInputBox">
                        <form action="/users/xiuBrand" method="POST" enctype="multipart/form-data">

                            <p>
                                <label>
                                    <span>品牌ID:</span>
                                    <input type="text" name="brandName1" id="brandPhone">
                                </label>
                            </p>
                            <p>
                                <label>
                                    <span>品牌名称:</span>
                                    <input type="text" name="brandName2" id="brandPhone1">
                                </label>
                            </p>
                            <p>
                                <span>图片:</span>
                                <input type="file" class="file" name="drandLogo">
                            </p>
                            <p style="text-align:center;">
                                <input type="submit" value="修改" class="btnBox" name="btnName1">
                                <input type="button" value="取消" class="btnBox" name="btnName2" id="brandBtnBox2">
                            </p>
                        </form>
                    </div>

                </div>

            </div>

        </div>



        <!-- 底部 -->
        <%- include('./common/foot.ejs') %>
    </div>
</body>

</html>
<script src="/jquery-1.12.4.min.js"></script>
<script>
    var flag = true;
    $("#btnBrand").click(function () {
        if (flag) {
            $("#newBrandBox").show();
            flag = false;
        } else {
            $("#newBrandBox").hide();
            flag = true;
        }
    });
    //取消点击
    $("#btnBox2").click(function () {
        $("#newBrandBox").hide();
        flag = true;
    });

    // 品牌修改开关
    $("span[id=spanBrandXiu]").click(function () {
        if (flag) {
            $("#xiuBrandBox").show();
            $("#brandPhone").val($(this).prop('className'));
            $("#brandPhone1").val($(this).attr('abcd')); //获取到目标的值

            // console.log(($(this).attr('abcd')));
            flag = false;
        } else {
            $("#xiuBrandBox").hide();
            flag = true;
        }
    });
    //取消点击
    $("#brandBtnBox2").click(function () {
        $("#xiuBrandBox").hide();
        flag = true;
    });
</script>